<%= render @project %>

<div>
  <%= @project.long_description %>
</div>

<% if current_user == @project.user %>
  <div class="controls">
    <%= link_to "Edit", edit_project_path(@project), :class => "btn btn-primary" %>
    <%= link_to "Delete", @project, 
                :method => "delete", :confirm => "Are you sure?", :class => "btn btn-danger" %>
  </div>
<% end %>

