<%= form_for @project do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <br /><br />

  <%= f.label :description %>
  <%= f.text_field :description %>

  <br /><br />

  <%= f.label :long_description %>
  <%= f.text_area :long_description, :rows => "10" %>

  <br /><br />

  <%= f.label :language %>
  <%= f.text_field :language %>

  <br /><br />

  <%= f.submit :class => "btn btn-primary" %>
<% end %>
