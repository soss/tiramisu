<div class="well span4">
  <h2>Log in</h2>
  <%= form_tag sessions_path do %>
      <%= text_field_tag :username, params[:username], placeholder: "Username" %>

      <%= password_field_tag :password, nil %>

      <%= label_tag :remember_me, :class => "checkbox" do %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>Remember me
      <% end %>
      
      <%= submit_tag "Log in", class: "btn btn-info" %>
      <%= link_to "Forgot Password?", new_password_reset_path , :class => "btn btn-success" %></div>

  <% end %>
</div>